<UserControl x:Class="RentalSystem.AdminClient.View.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/> <!-- User list -->
            <ColumnDefinition Width="*"/>   <!-- Details -->
        </Grid.ColumnDefinitions>

        <!-- LEFT : RIGHT (detailz) -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Users"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- Search Bar -->
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="260"
                     Margin="0 0 0 20"
                     Padding="8"
                     />
            

            <!-- User List -->
            <ListBox ItemsSource="{Binding FilteredUsers}"
                     SelectedItem="{Binding SelectedUser}"
                     Width="260"
                     Height="400"
                     BorderThickness="0"
                     Background="Transparent"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                                Margin="0 5"
                                Background="White"
                                CornerRadius="8"
                                BorderBrush="#ddd"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Email}" Foreground="#777" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


        </StackPanel>

        <!-- SER DETAILS -->
        <StackPanel Grid.Column="1" Margin="40 0 0 0">

            <TextBlock Text="User Details"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- Selected User Content -->
            <StackPanel DataContext="{Binding SelectedUser}">

                <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="{Binding Email}" FontSize="16" Foreground="#666" Margin="0 5 0 20"/>

                <TextBlock Text="User ID:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Id}" Margin="0 0 0 10"/>
                
                <TextBlock Text="Registered:" FontWeight="Bold"/>
                <TextBlock Text="{Binding RegisteredDate}" Margin="0 0 0 10"/>

                <TextBlock Text="Active Rentals:" FontWeight="Bold"/>
                <TextBlock Text="{Binding ActiveRentals}" Margin="0 0 0 10"/>

                <TextBlock Text="Total Rentals:" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalRentals}" Margin="0 0 0 5"/>

                <TextBlock Text="Last Login:" FontWeight="Bold"/>
                <TextBlock Text="{Binding LastLogin}" Margin="0 0 0 5"/>
                
                <TextBlock Text="Role:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Role}" Margin="0 0 0 5"/>
                
                
                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0" HorizontalAlignment="Left">
                    <Button Content="Reset Password"
                            Width="150"
                            Margin="0 0 10 0"
                            Command="{Binding DataContext.ResetPasswordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button Content="Promote"
                            Width="120"
                            Margin="0 0 10 0"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding DataContext.PromoteUserCommand,
                              RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button Content="Demote"
                            Width="120"
                            Margin="0 0 10 0"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Command="{Binding DataContext.DemoteUserCommand,
                              RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button Content="Delete"
                            Width="120"
                            Background="#ffdddd"
                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
