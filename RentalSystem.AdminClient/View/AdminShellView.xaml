<UserControl x:Class="RentalSystem.AdminClient.View.AdminShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <!-- 
        Shared navigation button style for the top taskbar.
        Keeps hover logic and visuals consistent across tabs.
    -->
    <UserControl.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009E98"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!-- topbar -->
            <RowDefinition Height="*"/>  <!-- content -->
        </Grid.RowDefinitions>

        <!-- Taskbar play around here 2 change color -->
        <Grid Background="#00B2A9" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- navbar -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Settings" Command="{Binding NavigateSettings}" Style="{StaticResource NavButton}"/>
                <Button Content="User" Command="{Binding NavigateUser}" Style="{StaticResource NavButton}"/>
                <Button Content="Annoncer" Command="{Binding NavigateAnnoncer}" Style="{StaticResource NavButton}"/>
                <Button Content="Stats" Command="{Binding NavigateStats}" Style="{StaticResource NavButton}"/>
			</StackPanel>

            <!-- logout button -->
            <Button Grid.Column="1"
                    Content="Logout"
                    Command="{Binding Logout}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D94444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding CurrentAdminViewModel}" />
    </Grid>
</UserControl>
