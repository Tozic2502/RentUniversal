<UserControl x:Class="RentalSystem.AdminClient.View.SupportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: TICKET LIST -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Support"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <ListBox ItemsSource="{Binding Contacts}"
                     SelectedItem="{Binding SelectedContact}"
                     BorderThickness="0">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0 0 0 10"
                                Padding="10"
                                Background="White"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                CornerRadius="6">
                            <StackPanel>
                                <TextBlock Text="{Binding Subject}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Email}" Foreground="#777"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                           FontSize="11"
                                           Foreground="#999"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>

        <!-- RIGHT: DETAILS -->
        <StackPanel Grid.Column="1" Margin="40 0 0 0">

            <TextBlock Text="Ticket Details"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <StackPanel DataContext="{Binding SelectedContact}">
                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding Email}" Foreground="#666" Margin="0 5 0 10"/>

                

                <TextBlock Text="Message" FontWeight="Bold"/>
                <TextBlock Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Margin="0 0 0 20"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Copy Email"
                            Width="120"
                            Margin="0 0 10 0"
                            Command="{Binding DataContext.CopyEmailCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button Content="Delete"
                            Width="120"
                            Background="#F44336"
                            Foreground="White"
                            Command="{Binding DataContext.DeleteCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
