<UserControl x:Class="RentalSystem.AdminClient.View.AnnoncerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: ITEM LIST -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Annoncer"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <ListBox ItemsSource="{Binding Items}"
                     SelectedItem="{Binding SelectedItem}"
                     BorderThickness="0">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0 0 0 10"
                                Padding="10"
                                Background="White"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                CornerRadius="6">

                            <StackPanel>
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"/>

                                <TextBlock Text="{Binding Category}"
                                           Foreground="#777"/>

                                <TextBlock Text="{Binding Value, StringFormat={}{0} DKK}"
                                           Foreground="#555"/>

                                <TextBlock Text="{Binding IsAvailable}"
                                           Foreground="Green"/>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>

        <!-- RIGHT: EDIT / CREATE -->
        <StackPanel Grid.Column="1" Margin="40 0 0 0">

            <TextBlock Text="Rediger Annonce"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <TextBlock Text="Title" FontWeight="Bold"/>
            <TextBox Text="{Binding Name}" Margin="0 0 0 10"/>

            <TextBlock Text="Category" FontWeight="Bold"/>
            <TextBox Text="{Binding Category}" Margin="0 0 0 10"/>

            <TextBlock Text="Condition" FontWeight="Bold"/>
            <TextBox Text="{Binding Condition}" Margin="0 0 0 10"/>

            <TextBlock Text="Value" FontWeight="Bold"/>
            <TextBox Text="{Binding Value}" Margin="0 0 0 10"/>
            
            <TextBlock Text="Available?" FontWeight="Bold" />
            <TextBlock Text="{Binding IsAvailable}" Margin="0 0 0 10"/>

            <TextBlock Text="Images"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 30 0 10"/>

            <!-- IMAGE GALLERY -->
            <ItemsControl ItemsSource="{Binding SelectedItem.ImageUrls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="140"
                                Margin="5"
                                Padding="5"
                                Background="White"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                CornerRadius="6">

                            <StackPanel>
                                <!-- IMAGE -->
                                <Image Width="120"
                                       Height="120"
                                       Stretch="UniformToFill"
                                       Source="{Binding}" />

                                <!-- DELETE  -->
                                <Button Content="Delete"
                                        Margin="0 5 0 0"
                                        Height="28"
                                        Background="#ffdddd"
                                        Command="{Binding DataContext.DeleteImageCommand,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- addimg -->
            <Button Content="Add Image"
                    Width="120"
                    Height="28"
                    Margin="0 15 0 15"
                    HorizontalAlignment="Left"
                    Command="{Binding UploadImageCommand}" />
            

            <StackPanel Orientation="Horizontal">

                <Button Content="Create"
                        Width="120"
                        Margin="0 0 10 0"
                        Background="#4CAF50"
                        Foreground="White"
                        Command="{Binding CreateCommand}"/>

                <Button Content="Update"
                        Width="120"
                        Margin="0 0 10 0"
                        Background="#2196F3"
                        Foreground="White"
                        Command="{Binding UpdateCommand}"/>

                <Button Content="Delete"
                        Width="120"
                        Background="#F44336"
                        Foreground="White"
                        Command="{Binding DeleteCommand}"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
