<UserControl x:Class="RentalSystem.AdminClient.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">

    <Grid Margin="40">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Settings"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 30"/>
        
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0">

            <!-- Website Settings -->
            <TextBlock Text="Website Settings"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 15"/>

            <ItemsControl ItemsSource="{Binding WebsiteSettings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">

                            <TextBlock Text="{Binding Label}"
                                       Width="200"
                                       VerticalAlignment="Center"/>

                            <ContentControl Content="{Binding Control}" />

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <!-- acp settingz -->
            <TextBlock Text="ACP Settings"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 20 0 15"/>


            <ItemsControl ItemsSource="{Binding ACPSettings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">

                            <TextBlock Text="{Binding Label}"
                                       Width="200"
                                       VerticalAlignment="Center"/>

                            <ContentControl Content="{Binding Control}" />

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>


        <!-- apply button -->
        <Button Grid.Row="2"
                Content="Apply Settings"
                Width="200"
                Height="40"
                HorizontalAlignment="Right"
                Margin="0 20 0 0"
                Command="{Binding SaveCommand}"/>

    </Grid>
</UserControl>
