<UserControl x:Class="RentalSystem.AdminClient.View.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="RentHub Stats"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 30"/>

        <!-- Grid -->
        <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="0" HorizontalAlignment="Left">

            <!-- Card Template -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10"
                    BorderBrush="#ddd"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding UsersCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="Total Users"
                               FontSize="16"
                               Foreground="#777"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10"
                    BorderBrush="#ddd"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding ActiveRentals}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="Active Rentals"
                               FontSize="16"
                               Foreground="#777"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10"
                    BorderBrush="#ddd"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding RevenueToday}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="Revenue Today"
                               FontSize="16"
                               Foreground="#777"/>
                </StackPanel>
            </Border>

            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="10"
                    BorderBrush="#ddd"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{Binding SystemUptime}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="System Uptime"
                               FontSize="16"
                               Foreground="#777"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </Grid>
</UserControl>
